{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "out": "dist/index.d.ts",
    "rootDirs": ["src"],
    "skipLibCheck": true,
  },
  "include": [
    "./src/*",
  ],
  "exclude": [
    "./demos/*",
  ]
}
